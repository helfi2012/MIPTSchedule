<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/scheduleMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/schedule_item_ripple">

        <FrameLayout
            android:id="@+id/time_layout"
            android:layout_width="@dimen/schedule_time_width"
            android:layout_height="60dp"
            android:background="@drawable/bg_item_lec"
            android:clickable="false"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/startTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/futura_heavy"
                android:gravity="center"
                android:paddingTop="8dp"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="9:00" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="28dp"
                android:alpha="0.7"
                android:background="@android:color/white"
                android:clickable="false" />

            <TextView
                android:id="@+id/endTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:fontFamily="@font/futura_heavy"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="10:25" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:clickable="false">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/futura_book"
                android:maxLines="2"
                android:textColor="@color/textBig"
                android:textSize="20sp"
                tools:text="Теоретическая механика" />

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:ellipsize="end"
                android:fontFamily="@font/futura_book"
                android:singleLine="true"
                android:textColor="@color/textSmall"
                android:textSize="18sp"
                tools:text="509 ГК" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>